{
    "spider": "universal",
    "website": "中华科技网",
    "type": "新闻",
    "index": "http://tech.china.com/",
    "settings": {
      "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/96.0.4664.110 Safari/537.36 Edg/96.0.1054.62",
      "DOWNLOAD_DELAY": "3"
    },
    "allowed_domains": ["tech.china.com"],
    "start_urls": ["http://tech.china.com/articles/"],
    "rules": "china",
    "item": {
        "class": "NewsItem",
        "loader": "ChinaLoader",
        "attrs": {
          "title": [
            {
              "method": "xpath",
              "arg": "//h1[@id='chan_newsTitle']/text()"
            }
          ],
          "url": [
            {
              "method": "respAttr",
              "arg": "url"
            }
          ],
          "text": [
            {
              "method": "xpath",
              "arg": "//div[@id='chan_newsDetail']//text()"
            }
          ],
          "datetime": [
            {
              "method": "css",
              "arg": "div.chan_newsInfo_source span[class='time']::text"
            }
          ],
          "source": [
            {
              "method": "css",
              "arg": "div[class=\"chan_newsInfo_source\"] span[class=\"source\"]::text",
              "re": ""
            }
          ],
          "website": [
            {
              "method": "value",
              "arg": "中华科技网"
            }
          ]
        }
      }
}